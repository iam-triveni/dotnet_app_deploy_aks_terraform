{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location (region) for all resources."
        }
      },
      "appServiceSku": {
        "type": "string",
        "defaultValue": "F1",
        "metadata": {
          "description": "The SKU of App Service Plan"
        }
      },
      "dockerImageName": {
        "type": "string",
        "defaultValue": "maaletriveniacr243142.azurecr.io/webapp:142"
      },
      "dockerRegistryUrl": {
        "type": "string",
        "defaultValue": "maaletriveniacr243142.azurecr.io"
      },
      "dockerRegistryUsername": {
        "type": "string",
        "defaultValue": "maaletriveniacr243142"
      }
    },
    "variables": {
      "webAppPortalName": "mfvhdkdjcfjddsas",
      "appServicePlanName": "mfvhdkdjcfjddsasp"
    },
    "resources": [
      {
        "apiVersion": "2017-08-01",
        "type": "Microsoft.Web/serverfarms",
        "kind": "linux",
        "name": "[variables('appServicePlanName')]",
        "location": "[parameters('location')]",
        "properties": {
          "reserved": true
        },
        "sku": {
          "name": "[parameters('appServiceSku')]"
        }
      },
      {
        "type": "Microsoft.Web/sites",
        "apiVersion": "2016-08-01",
        "name": "[variables('webAppPortalName')]",
        "kind": "app,linux,container",
        "location": "[parameters('location')]",
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
        ],
        "properties": {
          "name": "[variables('webAppPortalName')]",
          "siteConfig": {
            "linuxFxVersion": "[concat('DOCKER|', parameters('dockerImageName'))]",
            "alwaysOn": false,
            "appSettings": [
              {
                "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
                "value": "false"
              },
              {
                "name": "DOCKER_REGISTRY_SERVER_URL",
                "value": "[parameters('dockerRegistryUrl')]"
              },
              {
                "name": "DOCKER_REGISTRY_SERVER_USERNAME",
                "value": "[parameters('dockerRegistryUsername')]"
              },
              {
                "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
                "value": "[parameters('dockerRegistryPassword')]"
              },
              {
                "name": "WEBSITES_PORT",
                "value": 8080
              }
            ]
          },
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
        }
      }
    ]
  }
  